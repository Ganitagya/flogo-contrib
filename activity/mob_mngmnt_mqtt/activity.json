{
  "name": "MQTT Publisher for streambase",
  "type": "flogo:activity",
  "ref": "github.com/Ganitagya/flogo-contrib/activity/mob_mngmnt_mqtt",
  "version": "0.0.1",
  "title": "Streambase Publisher MQTT Message",
  "description": "Pubishes message on MQTT topic for streambase",
  "author": "Akash Mahapatra <amahapat@tibco.com>",
  "input":[
   {
      "name": "broker",
      "type": "string"
    },
    {
      "name": "id",
      "type": "string"
    },
    {
      "name": "user",
      "type": "string"
    },
    {
      "name": "password",
      "type": "string"
    },
    {
      "name": "topic",
      "type": "string"
    },
    {
      "name": "qos",
      "type": "integer",
      "allowed" : ["0", "1", "2"]
    },
    {
      "name": "message",
      "type": "string"
    }
  ],
  "output": [
    {
      "name": "result",
      "type": "string"
    }
  ]
}
